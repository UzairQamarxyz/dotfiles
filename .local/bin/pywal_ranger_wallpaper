#!/usr/bin/env sh
FILE_PATH="$1"
wal -i "${FILE_PATH}" -o ~/.config/wal/done.sh &&
	dwmc xrdb && cp "${FILE_PATH}"  ~/Pictures/wallpaper.png &&
	convert -resize 1920x1080^ -gravity center -extent 1920x1080 ~/Pictures/wallpaper.png ~/.cache/i3lock/blur.png &&
	convert -gaussian-blur 20x10 ~/.cache/i3lock/blur.png ~/.cache/i3lock/blur.png
