#!/usr/bin/env sh

strength=""
ssid=""
wifi="ó±›… "
ethernet=""

# Ethernet
# [ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = 'up' ] && ethernet="ó°ˆ€ "

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon="ó°Œ¾ "

# Wifi
if [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ]; then
    strength="$(grep "^\s*w" /proc/net/wireless | awk '{ print int($3 * 100 / 70)}')"
    ssid="$(nmcli -t -f active,ssid dev wifi | grep '^yes' | cut -d\: -f2)"
    case 1 in
        $((strength >= 80))) wifi="ó°¤¨ " ;;
        $((strength >= 60))) wifi="ó°¤¥ " ;;
        $((strength >= 40))) wifi="ó°¤¢ " ;;
        $((strength >= 20))) wifi="ó°¤Ÿ " ;;
        *) wifi="ó°¤¯ " && exit ;;
    esac

# elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ]; then
#     [ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon="ó°–© "
fi

echo "[31;4m $wifi$ethernet$tunicon $ssid [0m"
