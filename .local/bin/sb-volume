#!/usr/bin/env sh

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

[ "$vol" != "${vol%\[MUTED\]}" ] && echo "[33;4mó°¸ˆ Mute[0m" && exit

vol="${vol#Volume: }"

split() {
    IFS=$2
    set -- $1
    printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
    $((vol >= 70))) icon="ó°•¾" ;;
    $((vol >= 30))) icon="ó°–€" ;;
    $((vol >= 1))) icon="ó°•¿" ;;
    *) echo "[33;4mó°¸ˆ Mute[0m" && exit ;;
esac

echo "[33;4m$icon $vol%[0m"
